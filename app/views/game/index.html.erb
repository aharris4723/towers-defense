<script>
// the information about goblin
class Goblin{
    constructor(){
        this.canvas = document.getElementById('mycanvas');
        this.context = this.canvas.getContext("2d");
        this.health = 3;
        this.x = -6;
        this.y = -16;
        this.speed =2;
        this.image = document.getElementById("image");
        this.width= 80;
        this.height = 80;
    }
    draw(){
        this.context.drawImage(this.image, this.x, this.y, this.width, this.height);
    }
    update(){
        if(this.x != 370 && this.y == -16){
            this.x += this.speed ;
        }
        if(this.x == 370 && this.y < 152){
            this.y += this.speed;
        }
        if(this.y == 152 && this.x > 58){
            this.x -= this.speed;
        }
        if(this.x == 58 && this.y!= -16 && this.y < 225){
            this.y += this.speed;
        }
    }
}

class Tower {
  constructor(x, y) {
    this.canvas = document.getElementById('mycanvas');
    this.context = this.canvas.getContext("2d");
    this.damage = 1;
    this.towerImage = document.getElementById('tower_image');
    this.width = 100;
    this.height = 100;
    this.xcord = x;
    this.ycord = y;
  }
  drawTower(){
    this.context.drawImage(this.towerImage, this.xcord, this.ycord, this.width, this.height);
  }
