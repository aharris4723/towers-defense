document.addEventListener('dragend', function(event) {
  canvas = document.getElementById('mycanvas');
  rect = canvas.getBoundingClientRect();
  var tower = new Tower(event.clientX - rect.left, event.clientY - rect.top);
  tower.xcord = event.clientX - rect.left;
  tower.ycord = event.clientY - rect.top;
  tower.drawTower();
})

